{
  "manifest_version": 3,
  "name": "Get the F* Answer",
  "version": "1.0",
  "description": "Right-click to summon Gemini and cheat quizzes like a boss.",
  "permissions": ["contextMenus", "scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "Get the F* Answer"
  }
}

